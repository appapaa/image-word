{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "target": "ES6",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "lib": [
      "ES6",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.quoteStyle": "single"
}